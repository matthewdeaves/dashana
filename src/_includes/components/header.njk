<header class="site-header">
  <div class="header-top">
    <h1 class="site-title">{{ config.projectName }}</h1>
    <span class="customer-name">{{ config.customerName }}</span>
  </div>

  <nav class="main-nav">
    {% if config.tabs.dashboard %}
      <a href="{{ pathPrefix }}/" class="nav-link {% if page.url == '/' or page.url == pathPrefix + '/' %}active{% endif %}">Dashboard</a>
    {% endif %}
    {% if config.tabs.board %}
      <a href="{{ pathPrefix }}/board/" class="nav-link {% if '/board/' in page.url %}active{% endif %}">Board</a>
    {% endif %}
    {% if config.tabs.tasks %}
      <a href="{{ pathPrefix }}/tasks/" class="nav-link {% if '/tasks/' in page.url %}active{% endif %}">Tasks</a>
    {% endif %}
    {% if config.tabs.timeline %}
      <a href="{{ pathPrefix }}/timeline/" class="nav-link {% if '/timeline/' in page.url %}active{% endif %}">Timeline</a>
    {% endif %}
  </nav>

  <div class="header-actions">
    <button type="button" class="theme-toggle" id="theme-toggle" aria-label="Toggle dark mode">
      <span class="theme-icon-light">Light</span>
      <span class="theme-icon-dark">Dark</span>
    </button>

    <div class="version-info">
      {% if version %}
        <span class="version-badge">{{ version }}</span>
        <a href="{{ config.siteBase }}/" class="version-link">View Latest</a>
      {% else %}
        <span class="version-badge current">Latest</span>
      {% endif %}

      {% if versions.length > 0 %}
        <a href="{{ config.siteBase }}/versions/" class="version-link">All Versions</a>
      {% endif %}
    </div>
  </div>
</header>
